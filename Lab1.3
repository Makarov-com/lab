#include <iostream>
using namespace std;

class time {
	int hours, minutes, seconds;


public:
	time() {
		hours = 1;
		minutes = 1;
		seconds = 1;
	}
	time(int a, int b, int c) {
		hours = a;
		minutes = b;
		seconds = c;
	}
	void print() {
		cout << hours << ':' << minutes << ':' << seconds << endl;
	}
	void Sum(time a, time b) {
		hours = a.hours + b.hours;
		minutes = a.minutes + b.minutes;
		seconds = a.seconds + b.seconds;
	}
};
int main()
{
	time t1;
	t1.print();
	time t2(6, 4, 2);
	t2.print();
	time t3;
	t3.Sum(t1, t2);
	t3.print();
	system("pause");
}
